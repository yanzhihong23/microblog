doctype 5
html
  head
    title= title
    link(rel='stylesheet/less', href='/stylesheets/style.less')
    link(rel='stylesheet/less', href='/stylesheets/header.less')
    link(rel='stylesheet/less', href='/stylesheets/header-img.less')
    link(rel='stylesheet/less', href='/stylesheets/detail.less')
    block link
  body
    nav
      .container
        ul.nav.navbar-nav.clearfix
            li.active
                a(href='/')
                    span.icon-home(role='icon')
                    span.text Home
            if(user)
                li
                    a(href='/connect')
                        span.icon-connect(role='icon')
                        span.text Connect
                li
                    a(href='/discover')
                        span.icon-discover(role='icon')
                        span.text Discover
                li
                    a(href='/profile')
                        span.icon-profile(role='icon')
                        span.text Me
            else
                li
                    a(href='/login') Login
                li
                    a(href='/signup') Sign Up
    block content
    script(src='/javascripts/less-1.5.0.min.js')