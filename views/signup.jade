extends layout
block link
    link(rel='stylesheet', href='/stylesheets/signin.css')

block content
    .container
        form.form-signin(action='/doSignUp', method='post')
            h2.form-signin-heading Join MicroBlog today.
            label Full name
            input.form-control(type='text', name='fullname', placeholder='Zhihong Yan', required, autofocus)
            label Email address
            input.form-control(type='text', name='email', placeholder='yanzhihong23@qq.com', required)
            label Create a password
            input.form-control(type='password', name='password', placeholder='Password', required)
            label Choose your username
            input.form-control(type='text', name='username', placeholder='yanzhihong23', required)
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up